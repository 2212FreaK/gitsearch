<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.search.SearchFragment">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.2"
        android:fontFamily="@font/pacifico"
        android:text="@string/title"
        android:textAppearance="?attr/textAppearanceHeadline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/keySearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:imeOptions="actionSearch"
        app:closeIcon="@drawable/ic_clear"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:queryHint="@string/search_hint"
        app:searchIcon="@drawable/ic_search_icon_gray" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@id/keySearchView"
        app:layout_constraintEnd_toEndOf="@id/keySearchView"
        app:layout_constraintTop_toBottomOf="@id/keySearchView"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:listitem="@layout/item_layout_search_history" />

</androidx.constraintlayout.widget.ConstraintLayout>